extends layout
block content
  main.main
    .card-container
      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/images/tours/${tour.tourMainImageName}` alt=`${tour.name}`)
            h3.heading-tertirary
              span= tour.name
          .card__details
            h4.card__sub-heading= `${tour.tourDifficulty} ${tour.duration} day tour`
            p.card__text= tour.tourSummary
            .card__data
              svg.card__icon
                use(xlink:href='/images/icons.svg#icon-map-pin')
              span= tour.startingPoint.description
            .card__data
              svg.card__icon
                use(xlink:href='/images/icons.svg#icon-calendar')
              span= new Date(tour.tourStartDates[0]).toLocaleString('en-us', {month: 'long', year: 'numeric'})
            .card__data
              svg.card__icon
                use(xlink:href='/images/icons.svg#icon-flag')
              span= `${tour.allLocations.length} stops`
            .card__data
              svg.card__icon
                use(xlink:href='/images/icons.svg#icon-user')
              span= `${tour.groupSizeMax} people`

          .card__footer
            p
              span.card__footer-value= `$${tour.price}`
              | 
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= tour.tourRatingAverage
              | 
              span.card__footer-text= `rating of (${tour.ratingsTotal}) ratings`
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details