extends layout
block content
  main.main
    .card-container
      each user in users
        .card
          .card__header
            .card__picture

              img.card__picture-img(src=`/images/users/${user.photo}` alt=``)
            h3.heading-tertirary
              span= user.role
          .card__details
            p.card__text= user.userSummary
            .card__data
              svg.card__icon
                use(xlink:href='/images/icons.svg#icon-user')
              h4
                span= `${user.name}`
            .card__data
              svg.card__icon
                use(xlink:href='/images/icons.svg#icon-mail')
              a(href=`mailto:${user.email}`)              
                span=user.email
          .card__footer
         
            a.btn.btn--green.btn--small(href=`/user/${user.id}`) Update user information
              
          